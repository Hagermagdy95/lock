<Page
    x:Class="Lock.Show"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lock"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>


        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/show1.jpg"/>
        </Grid.Background>

        <GridView x:ConnectionId='1' Name="EM"                                        >
            <GridView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>

                        <StackPanel>
                            <TextBlock Text="{Binding appname}" Name="getname"></TextBlock>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="{Binding accname}" Name="Getaccname"></TextBlock>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="{Binding email}" Name="getemail"></TextBlock>
                            <TextBlock Text="{Binding password}" Name="getpassword" ></TextBlock>

                        </StackPanel>
                    </StackPanel>

                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
       

        <Button x:ConnectionId='2' Content="Back" FontWeight="Bold"  Background="White"  Foreground="#FF202740"                       HorizontalAlignment="Left" Margin="283,562,0,0" VerticalAlignment="Top" Width="79"/>









    </Grid>
</Page>

